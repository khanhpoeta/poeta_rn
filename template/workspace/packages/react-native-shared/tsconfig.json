{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": true /* Allow javascript files to be compiled. */,
    "outDir": "build",
    "declaration": true,
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@poeta/*": ["@poeta/shared/build/*"],
      "@poeta/react-native/*": ["@poeta/react-native-shared/build/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/*.tsx", "src/**/*.tsx", "src/**/*.ts", "src/index.ts"],
  "exclude": [
    "build",
    "node_modules",
    "babel.config.ts",
    "jest.config.ts",
    "src/index.d.ts"
  ]
}
