{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native-auth0/**",
      "**/react-native-config/**",
      "**/@types/react-native-auth0/**",
      "**/@babel/eslint-parser/**",
      "**/@typescript-eslint/eslint-plugin/**",
      "**/@typescript-eslint/parser/**",
      "**/babel-plugin-module-resolver/**",
      "**/eslint/**",
      "**/@poeta/shared/**",
      "**/@rneui/base/**",
      "**/date-fns/**",
      "**/react-native/**",
      "**/react-native-device-info/**",
      "**/react-native-keychain/**",
      "**/react-native-select-dropdown/**",
      "**/react-native-fast-image/**",
      "**/react-native-date-picker/**"
    ]
  },
  "scripts": {
    "lint": "eslint ./packages --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "ultra -r lint:fix",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "build": "lerna run build",
    "build-shared": "lerna run build --scope=@poeta/shared",
    "build-react-native-shared": "yarn workspace @poeta/react-native-shared build"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/react": "^18.0.35",
    "@types/react-native": "^0.71.4",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "typescript": "4.8.4"
  },
  "resolutions": {
    "extensions/**/lodash": "^4.17.21",
    "react": "18.2.0"
  },
  "engineStrict": true,
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "poeta",
      "parser": "typescript"
    }
  }
}
