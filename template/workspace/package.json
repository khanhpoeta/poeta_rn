{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "lint": "eslint ./packages --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "ultra -r lint:fix",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "build": "lerna run build",
    "build-shared": "lerna run build --scope=@poeta/shared",
    "build-react-native-shared": "yarn workspace @poeta/react-native-shared build"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^7.32.0",
    "prettier": "^2.8.7",
    "lerna": "^6.6.1",
    "typescript": "4.8.4"
  },
  "resolutions": {
    "extensions/**/lodash": "^4.17.21",
    "react": "18.2.0"
  },
  "engineStrict": true,
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "poeta",
      "parser": "typescript"
    }
  }
}
