{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native-auth0/**",
      "**/react-native-config/**",
      "**/@types/react-native-auth0/**"
    ]
  },
  "scripts": {
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "build": "yarn build-shared",
    "build-shared": "yarn workspace @poeta/shared build",
    "build-react-native-shared": "yarn workspace @poeta/react-native-shared build"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^7.32.0",
    "typescript": "4.4.4"
  },
  "resolutions": {
    "extensions/**/lodash": "^4.17.21",
    "react": "18.2.0"
  },
  "engineStrict": true,
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "nupharma",
      "parser": "typescript"
    }
  }
}
